<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hulianhujia.spellway.activitys.LoginAty">
    <ImageView
        android:id="@+id/lobg"
        android:scaleType="fitXY"
        android:src="@drawable/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_alignBottom="@id/lobg"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/btUser"
            android:text="游客登录"
            android:textColor="#FFFAEC5F"
            android:layout_weight="1"
            android:paddingBottom="14dp"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/btGuider"
            android:text="导游登录"
            android:textColor="#FFFAEC5F"
            android:layout_weight="1"
            android:paddingBottom="14dp"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/viewPager"
        android:layout_below="@id/lobg"
        android:background="#fff"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <EditText
            android:id="@+id/etPhone"
            android:drawableLeft="@drawable/telephoneg"
            android:layout_marginTop="15dp"
            android:paddingLeft="12dp"
            android:hint="手机号"
            android:inputType="phone"
            android:textColorHint="#666"
            android:imeOptions="actionDone"
            android:textSize="15sp"
            android:textColor="#666"
            android:drawablePadding="12dp"
            android:background="@drawable/login_border"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
        <EditText
            android:id="@+id/etPwd"
            android:layout_below="@id/etPhone"
            android:drawableLeft="@drawable/password"
            android:layout_marginTop="24dp"
            android:inputType="textPassword"
            android:paddingLeft="12dp"
            android:hint="密码"
            android:textColorHint="#666"
            android:textSize="15sp"
            android:textColor="#666"
            android:drawablePadding="12dp"
            android:background="@drawable/login_border"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
        <EditText
            android:id="@+id/etYzm"
            android:layout_below="@id/etPwd"
            android:drawableLeft="@drawable/password"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            android:paddingLeft="12dp"
            android:hint="验证码"
            android:textColorHint="#666"
            android:textSize="15sp"
            android:textColor="#666"
            android:drawablePadding="12dp"
            android:background="@drawable/login_border"
            android:layout_width="200dp"
            android:layout_height="48dp" />
        <TextView
            android:id="@+id/btGetYzm"
            android:text="获取验证码"
            android:layout_marginLeft="11dp"
            android:visibility="gone"
            android:layout_toRightOf="@id/etYzm"
            android:layout_below="@id/etPwd"
            android:layout_marginTop="28dp"
            android:textColor="#333"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@drawable/login_yzm_border"
            android:layout_width="100dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/btLogin"
            android:text="登录"
            android:textColor="#333"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_below="@id/btGetYzm"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_yzm_border"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
        <TextView
            android:id="@+id/btForget"
            android:text="忘记密码，去找回"
            android:textColor="#666"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btLogin"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_above="@id/viewPager"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp" />
        <ImageView
            android:id="@+id/userSJ"
            android:layout_above="@id/viewPager"
            android:src="@drawable/sanjiao"
            android:layout_width="20dp"
            android:layout_height="40dp"
            />
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="1dp" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/guideSJ"
            android:layout_above="@id/viewPager"
            android:src="@drawable/sanjiao"
            android:layout_width="20dp"
            android:layout_height="40dp"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp" />
    </LinearLayout>
</RelativeLayout>
