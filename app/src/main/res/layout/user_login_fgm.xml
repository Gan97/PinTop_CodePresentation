<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:background="#fff"
    android:paddingRight="20dp">
    <EditText
        android:id="@+id/etPhone"
        android:drawableLeft="@drawable/telephoneg"
        android:layout_marginTop="28dp"
        android:paddingLeft="12dp"
        android:hint="手机号"
        android:textColorHint="#666"
        android:textSize="15sp"
        android:textColor="#666"
        android:drawablePadding="12dp"
        android:background="@drawable/login_border"
        android:layout_width="match_parent"
        android:layout_height="48dp" />
    <EditText
        android:id="@+id/etPwd"
        android:layout_below="@id/etPhone"
        android:drawableLeft="@drawable/password"
        android:layout_marginTop="24dp"
        android:paddingLeft="12dp"
        android:hint="密码"
        android:textColorHint="#666"
        android:textSize="15sp"
        android:textColor="#666"
        android:drawablePadding="12dp"
        android:background="@drawable/login_border"
        android:layout_width="match_parent"
        android:layout_height="48dp" />
    <EditText
        android:id="@+id/etYzm"
        android:layout_below="@id/etPwd"
        android:drawableLeft="@drawable/password"
        android:layout_marginTop="24dp"
        android:paddingLeft="12dp"
        android:hint="密码"
        android:textColorHint="#666"
        android:textSize="15sp"
        android:textColor="#666"
        android:drawablePadding="12dp"
        android:background="@drawable/login_border"
        android:layout_width="200dp"
        android:layout_height="48dp" />
    <TextView
        android:id="@+id/btGetYzm"
        android:text="获取验证码"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@id/etYzm"
        android:layout_below="@id/etPwd"
        android:layout_marginTop="28dp"
        android:textColor="#333"
        android:gravity="center"
        android:textSize="15sp"
        android:background="@drawable/login_yzm_border"
        android:layout_width="100dp"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/btLogin"
        android:text="登录"
        android:textColor="#333"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_below="@id/btGetYzm"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_yzm_border"
        android:layout_width="match_parent"
        android:layout_height="48dp" />
    <TextView
        android:id="@+id/btForget"
        android:text="忘记密码，去找回"
        android:textColor="#666"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btLogin"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>