<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="375dp"
    android:background="#fff"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/dv1"
            android:layout_below="@id/a"
            android:background="#dbdbdb"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/dv1"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="手 机 号 :"
                android:textColor="@color/zitiColor"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColorHint="#999"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/send_shape"
                android:hint="填写手机号"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:textColor="@color/zitiotherColor"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/dv1"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="密      码 :"
                android:textColor="@color/zitiColor"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etPwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColorHint="#999"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/send_shape"
                android:hint="填写用户密码"
                android:textColor="@color/zitiotherColor"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@id/dv1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_height="50dp">
            <TextView
                android:text="重复密码 :"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:textSize="14sp"
                android:textColor="@color/zitiColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/etPwdTwice"
                android:inputType="textPassword"
                android:textSize="12sp"
                android:layout_marginRight="10dp"
                android:textColorHint="#999"
                android:hint="重复用户密码"
                android:textColor="@color/zitiotherColor"
                android:paddingLeft="10dp"
                android:layout_marginLeft="-2dp"
                android:background="@drawable/send_shape"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/dv1"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身 份 证 :"
                android:layout_centerVertical="true"
                android:textColor="@color/zitiColor"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/btIdCard"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/textView"
                android:background="@drawable/other_send_shape"
                android:src="@mipmap/zhuce_jiahao" />

            <TextView
                android:layout_toLeftOf="@id/btGuideCard"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导 游 证 :"
                android:layout_marginRight="16dp"
                android:textColor="@color/zitiColor"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/btGuideCard"
                android:layout_width="45dp"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_height="45dp"
                android:background="@drawable/other_send_shape"
                android:src="@mipmap/zhuce_jiahao" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="验 证 码 :"
                android:textSize="14sp"
                android:textColor="@color/zitiColor" />

            <EditText
                android:id="@+id/etYzm"
                android:layout_width="170dp"
                android:layout_marginLeft="16dp"
                android:layout_height="45dp"
                android:textColorHint="#999"
                android:background="@drawable/send_shape"
                android:hint="填写短信码"
                android:textColor="@color/zitiotherColor"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btSend"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="#fff"
                android:background="@drawable/my_send_shape"
                android:gravity="center"
                android:textSize="15sp"
                android:text="获取验证码" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@id/dv1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_height="50dp">
            <TextView
                android:text="校验码 :"
                android:textColor="@color/zitiColor"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etJym"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:textColorHint="#999"
                android:background="@drawable/send_shape"
                android:hint="填写验证码"
                android:textColor="@color/zitiotherColor"
                android:paddingLeft="10dp"
                android:textSize="12sp"/>

            <ImageView
                android:id="@+id/imgYz"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textSize="15sp"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/my_send_shape"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="15sp"
                android:text="提交注册" />

        </LinearLayout>
    </LinearLayout>
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorName="LineSpinFadeLoaderIndicator"
        app:indicatorColor="#FF7070"
        />
</RelativeLayout>