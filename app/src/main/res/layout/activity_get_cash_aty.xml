<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    tools:context="com.hulianhujia.spellway.activitys.guider.GetCashAty">
    <RelativeLayout
        android:id="@+id/loTitle"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#464D51">
        <ImageView
            android:id="@+id/btExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="11dp"
            android:tint="#fff"
            android:src="@mipmap/back"
            />
        <TextView
            android:text="提现"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/shouye_logo"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <TextView
        android:background="#f1f1f1"
        android:layout_width="match_parent"
        android:layout_height="12dp" />
    <LinearLayout
        android:id="@+id/loType"
        android:layout_below="@id/loTitle"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="97dp">
        <RelativeLayout
            android:id="@+id/loWe"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:text="微信"
                android:textColor="#333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:drawableLeft="@mipmap/wechat"
                android:drawablePadding="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/wxCheck"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:clickable="false"
                android:layout_marginRight="20dp"
                android:checked="true"
                android:background="@drawable/check_style"
                android:button="@null"
                android:layout_width="18dp"
                android:layout_height="18dp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/loAli"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:text="支付宝"
                android:textColor="#333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:drawableLeft="@mipmap/ali"
                android:drawablePadding="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8" />
            <CheckBox
                android:id="@+id/zfbCheck"
                android:clickable="false"
                android:layout_marginRight="20dp"
                android:button="@null"
                android:background="@drawable/check_style"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:background="#f1f1f1"
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/tv1"
            android:text="提现账号"
            android:textColor="#333"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etClient"
            android:layout_toRightOf="@id/tv1"
            android:hint="请输入微信或支付宝账户"
            android:background="@null"
            android:textColor="#333"
            android:textSize="12sp"
            android:singleLine="true"
            android:textColorHint="#999"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:background="#fff"

        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/tv2"
            android:text="确认账号"
            android:textColor="#333"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etClientAg"
            android:layout_toRightOf="@id/tv2"
            android:hint="请再次输入"
            android:textColor="#333"
            android:textSize="12sp"
            android:background="@null"
            android:singleLine="true"
            android:textColorHint="#999"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/tv3"
            android:text="提现金额"
            android:textColor="#333"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etMoney"
            android:layout_toRightOf="@id/tv3"
            android:hint="请输入提现金额"
            android:textColor="#333"
            android:inputType="numberDecimal"
            android:background="@null"
            android:textSize="12sp"
            android:singleLine="true"
            android:textColorHint="#999"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <TextView
        android:background="#f1f1f1"
        android:layout_width="match_parent"
        android:layout_height="15dp" />
    <TextView
        android:id="@+id/btCommit"
        android:text="确认提现"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/getcash_bt"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</LinearLayout>
