<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="375dp"
    android:background="#fff"
    android:layout_height="401dp">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/avi"
    android:layout_toEndOf="@+id/avi">
    <TextView
        android:id="@+id/dv1"
        android:background="#dbdbdb"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/dv1"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号 :"
            android:textColor="@color/zitiColor"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="286dp"
            android:layout_height="46dp"
            android:textColor="#333"
            android:textColorHint="#999"
            android:layout_marginLeft="10dp"
            android:background="@drawable/send_shape"
            android:hint="填写手机号"
            android:paddingLeft="10dp"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_below="@id/dv1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="密    码 :"
            android:textColor="@color/zitiColor" />

        <EditText
            android:id="@+id/etPwd"
            android:layout_width="286dp"
            android:layout_height="46dp"
            android:textColor="#333"
            android:textSize="12sp"
            android:textColorHint="#999"
            android:layout_marginLeft="10dp"
            android:background="@drawable/send_shape"
            android:hint="填写用户密码"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_below="@id/dv1"

        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp">
        <TextView
            android:text="验证码 :"
            android:textSize="14sp"
            android:textColor="@color/zitiColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etYzm"
            android:layout_width="171dp"
            android:layout_height="46dp"
            android:textSize="12sp"
            android:textColor="#333"
            android:layout_marginLeft="10dp"
            android:textColorHint="#999"
            android:background="@drawable/send_shape"
            android:hint="填写验证码"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/btSend"
            android:text="获取验证码"
            android:layout_marginLeft="7dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/my_send_shape"
            android:layout_width="108dp"
            android:layout_height="46dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_below="@id/dv1"

        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp">
        <TextView
            android:text="校验码 :"
            android:textSize="15sp"
            android:textColor="@color/zitiColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etJym"
            android:hint="填写验证码"
            android:textColor="#333"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColorHint="#999"
            android:background="@drawable/send_shape"
            android:layout_width="171dp"
            android:layout_height="46dp" />
        <ImageView
            android:id="@+id/imgYz"
            android:layout_marginLeft="7dp"
            android:gravity="center"
            android:layout_width="108dp"
            android:layout_height="46dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/btCommit"
        android:text="提   交"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/my_send_shape"
        android:layout_marginTop="61dp"
        android:layout_width="356dp"
        android:layout_height="46dp" />
</LinearLayout>
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:indicatorName="LineSpinFadeLoaderIndicator"
        app:indicatorColor="#FF7070"
    />
</RelativeLayout>