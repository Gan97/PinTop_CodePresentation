<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.hulianhujia.spellway.activitys.GuideFilterNewAty">
    <RelativeLayout
        android:id="@+id/loTitle"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/topbar">
        <ImageView
            android:id="@+id/btExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="11dp"
            android:tint="#333"
            android:src="@mipmap/back"
            />
        <TextView
            android:text="筛选"
            android:textColor="#333"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/shouye_logo"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv1"
        android:text="年龄"
        android:layout_below="@id/loTitle"
        android:textColor="#333"
        android:layout_marginTop="23dp"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RadioGroup
        android:id="@+id/rgAge"
        android:layout_below="@id/tv1"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/age_18"
            android:text="18-25岁"
            android:tag="1"
            android:textColor="#333"
            android:textSize="12sp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/rb_type"
            android:layout_width="80dp"
            android:layout_height="26dp" />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp" />
        <RadioButton
            android:id="@+id/age_26"
            android:text="26-30岁"
            android:textColor="#333"
            android:textSize="12sp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/rb_type"
            android:layout_width="80dp"
            android:layout_height="26dp" />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp" />
        <RadioButton
            android:id="@+id/age_31"
            android:text="31-40岁"
            android:textColor="#333"
            android:textSize="12sp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/rb_type"
            android:layout_width="80dp"
            android:layout_height="26dp" />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp" />
        <RadioButton
            android:id="@+id/age_40"
            android:text="40岁以上"
            android:textColor="#333"
            android:textSize="12sp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/rb_type"
            android:layout_width="80dp"
            android:layout_height="26dp" />
    </RadioGroup>
    <TextView
        android:id="@+id/tv2"
        android:text="性别"
        android:textColor="#333"
        android:layout_below="@id/rgAge"
        android:layout_alignLeft="@id/tv1"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RadioGroup
        android:id="@+id/tgSex"
        android:layout_below="@id/tv2"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/sex_m"
            android:text="男"
            android:textColor="#333"
            android:textSize="12sp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/rb_type"
            android:layout_width="80dp"
            android:layout_height="26dp" />
        <RadioButton
            android:id="@+id/sex_f"
            android:text="女"
            android:textColor="#333"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/rb_type"
            android:layout_width="80dp"
            android:layout_height="26dp" />
    </RadioGroup>
    <TextView
        android:id="@+id/tv3"
        android:text="价格"
        android:textColor="#333"
        android:layout_below="@id/tgSex"
        android:layout_alignLeft="@id/tv2"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RadioGroup
        android:id="@+id/rgPrice"
        android:layout_below="@id/tv3"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/price_30"
            android:text="￥30-￥50"
            android:textColor="#333"
            android:textSize="12sp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/rb_type"
            android:layout_width="80dp"
            android:layout_height="26dp" />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp" />
        <RadioButton
            android:id="@+id/price_50"
            android:text="￥50-￥100"
            android:textColor="#333"
            android:textSize="12sp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/rb_type"
            android:layout_width="80dp"
            android:layout_height="26dp" />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp" />
        <RadioButton
            android:text="￥100-￥150"
            android:id="@+id/price_100"
            android:textColor="#333"
            android:textSize="12sp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/rb_type"
            android:layout_width="80dp"
            android:layout_height="26dp" />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp" />
        <RadioButton
            android:id="@+id/price_150"
            android:text="￥150-￥200"
            android:textColor="#333"
            android:textSize="12sp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/rb_type"
            android:layout_width="80dp"
            android:layout_height="26dp" />
    </RadioGroup>
    <CheckBox
        android:id="@+id/btTopPrice"
        android:layout_below="@id/rgPrice"
        android:layout_alignLeft="@id/tv1"
        android:text="￥200以上"
        android:textColor="#333"
        android:textSize="12sp"
        android:button="@null"
        android:gravity="center"
        android:background="@drawable/rb_type"
        android:layout_width="80dp"
        android:layout_height="26dp" />
    <TextView
        android:id="@+id/tv4"
        android:text="等级"
        android:textColor="#333"
        android:layout_below="@id/btTopPrice"
        android:layout_alignLeft="@id/tv1"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RadioGroup
        android:id="@+id/rgLevel"
        android:layout_below="@id/tv4"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/gold"
            android:text="金牌"
            android:textColor="#333"
            android:textSize="12sp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/rb_type"
            android:layout_width="80dp"
            android:layout_height="26dp" />
        <RadioButton
            android:id="@+id/silver"
            android:text="银牌"
            android:textColor="#333"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/rb_type"
            android:layout_width="80dp"
            android:layout_height="26dp" />
        <RadioButton
            android:id="@+id/cu"
            android:text="铜牌"
            android:textColor="#333"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/rb_type"
            android:layout_width="80dp"
            android:layout_height="26dp" />
    </RadioGroup>
    <TextView
        android:id="@+id/btReset"
        android:text="重置"
        android:textColor="#333"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/rgLevel"
        android:background="@drawable/reset_shape"
        android:layout_width="155dp"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/btCommit"
        android:text="确认"
        android:layout_marginTop="30dp"
        android:textColor="#333"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_below="@id/rgLevel"
        android:background="@drawable/commit_shape"
        android:layout_width="155dp"
        android:layout_height="40dp" />
</RelativeLayout>
