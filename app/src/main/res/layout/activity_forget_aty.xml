<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f1f1f1"
    android:layout_height="match_parent"
    tools:context="com.hulianhujia.spellway.activitys.ForgetAty">
    <ImageView
        android:id="@+id/lobg"
        android:scaleType="fitXY"
        android:src="@drawable/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/viewPager"
        android:layout_below="@id/lobg"
        android:background="#fff"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <EditText
            android:id="@+id/etPhone"
            android:drawableLeft="@drawable/telephoneg"
            android:layout_marginTop="15dp"
            android:paddingLeft="12dp"
            android:hint="手机号"
            android:textColorHint="#666"
            android:textSize="15sp"
            android:textColor="#666"
            android:drawablePadding="12dp"
            android:background="@drawable/login_border"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
        <EditText
            android:id="@+id/etPwd"
            android:layout_below="@id/etPhone"
            android:drawableLeft="@drawable/password"
            android:layout_marginTop="24dp"
            android:inputType="textPassword"
            android:paddingLeft="12dp"
            android:hint="新密码"
            android:textColorHint="#666"
            android:textSize="15sp"
            android:textColor="#666"
            android:drawablePadding="12dp"
            android:background="@drawable/login_border"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
        <EditText
            android:id="@+id/etPwdAg"
            android:layout_below="@id/etPwd"
            android:drawableLeft="@drawable/password"
            android:layout_marginTop="24dp"
            android:inputType="textPassword"
            android:paddingLeft="12dp"
            android:hint="请确认新密码"
            android:textColorHint="#666"
            android:textSize="15sp"
            android:textColor="#666"
            android:drawablePadding="12dp"
            android:background="@drawable/login_border"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
        <EditText
            android:id="@+id/etYzm"
            android:layout_below="@id/etPwdAg"
            android:drawableLeft="@drawable/password"
            android:layout_marginTop="24dp"
            android:paddingLeft="12dp"
            android:hint="验证码"
            android:textColorHint="#666"
            android:textSize="15sp"
            android:textColor="#666"
            android:drawablePadding="12dp"
            android:background="@drawable/login_border"
            android:layout_width="200dp"
            android:layout_height="48dp" />
        <TextView
            android:id="@+id/btGetYzm"
            android:text="获取验证码"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@id/etYzm"
            android:layout_below="@id/etPwdAg"
            android:layout_marginTop="28dp"
            android:textColor="#333"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@drawable/login_yzm_border"
            android:layout_width="100dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/btLogin"
            android:text="确定"
            android:textColor="#333"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_below="@id/btGetYzm"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_yzm_border"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </RelativeLayout>
</RelativeLayout>
