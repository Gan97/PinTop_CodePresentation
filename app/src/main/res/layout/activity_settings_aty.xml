<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f1f1f1"
    android:layout_height="match_parent"
    tools:context="com.hulianhujia.spellway.activitys.SettingsAty">
    <RelativeLayout
        android:id="@+id/loTitle"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/topbar">
        <ImageView
            android:id="@+id/btExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="11dp"
            android:tint="#333"
            android:src="@mipmap/back"
            />
        <TextView
            android:text="设置"
            android:textColor="#333"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/shouye_logo"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/loDelet"
        android:background="#fff"
        android:layout_below="@id/loTitle"
        android:layout_marginTop="15dp"
        android:paddingTop="15dp"
        android:paddingLeft="12dp"
        android:paddingBottom="15dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="清理缓存"
            android:textColor="#333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvCache"
            android:textColor="#999"
            android:layout_alignParentRight="true"
            android:text="4.07Mb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lo1"
        android:paddingTop="11dp"
        android:layout_below="@id/loDelet"
        android:layout_marginTop="12dp"
        android:paddingBottom="11dp"
        android:background="#fff"
        android:paddingLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="接受邀请"
            android:textColor="#333"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.suke.widget.SwitchButton
            android:id="@+id/isInviteSwitch"
            app:sb_checked="true"
            app:sb_show_indicator="false"
            android:layout_marginRight="10dp"
            app:sb_uncheckcircle_width="0dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/dv"
        android:layout_below="@id/lo1"
        android:background="#dbdbdb"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <RelativeLayout
        android:id="@+id/lo2"
        android:paddingTop="11dp"
        android:background="#fff"
        android:layout_below="@id/dv"
        android:paddingLeft="12dp"
        android:paddingBottom="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="开启通知"
            android:textColor="#333"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.suke.widget.SwitchButton
            android:id="@+id/isNoticeSwitch"
            app:sb_checked="true"
            app:sb_show_indicator="false"
            android:layout_marginRight="10dp"
            app:sb_uncheckcircle_width="0dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/btPoint"
        android:text="为我打分"
        android:textColor="#333"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:background="#fff"
        android:paddingRight="10dp"
        android:drawableRight="@drawable/fanhui1"
        android:layout_marginTop="12dp"
        android:layout_below="@id/lo2"
        android:layout_width="match_parent"
        android:layout_height="48dp" />
    <TextView
        android:id="@+id/btLoginOut"
        android:text="退出登录"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/btPoint"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textColor="#333"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="46dp" />
    <TextView
        android:id="@+id/btChangePwd"
        android:text="修改密码"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/btLoginOut"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textColor="#333"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="46dp" />
</RelativeLayout>
