<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">
    <TextView
        android:layout_marginTop="1dp"
        android:background="#F1F1F1"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <RelativeLayout
        android:id="@+id/user_iv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userIcon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_width="31dp"
            android:layout_height="31dp"
             />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/userIcon"
            android:textColor="#333"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tvHowLong"
            android:layout_width="wrap_content"
            android:layout_below="@id/userName"
            android:layout_alignLeft="@id/userName"
            android:textColor="#999"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="10sp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tvContent"
        android:layout_marginTop="10dp"
        android:textColor="#333"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.lzy.ninegrid.NineGridView
        android:id="@+id/nineGrideView"
        app:ngv_gridSpacing="10dp"
        app:ngv_singleImageSize="400dp"
        app:ngv_singleImageRatio="2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userName"
            android:src="@drawable/locationg"/>
        <TextView
            android:id="@+id/tvLoc"
            android:textSize="10sp"
            android:textColor="#999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btInvite"
            android:layout_width="85dp"
            android:layout_height="22dp"
            android:layout_marginRight="11dp"
            android:gravity="center"
            android:background="@drawable/buleboder"
            android:drawableLeft="@drawable/invitation"
            android:padding="5dp"
            android:text="邀请旅游"
            android:textColor="#666"
            android:textSize="10sp" />
        <TextView
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="1dp" />
        <ImageView
            android:src="@drawable/like_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp" />
        <ImageView
            android:id="@+id/talk"
            android:src="@drawable/comment_grey"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp" />
        <ImageView
            android:id="@+id/btShare"
            android:src="@drawable/fenxiang"
            android:layout_marginRight="10dp"
            android:layout_width="15dp"
            android:layout_height="15dp" />
    </LinearLayout>

    <TextView
        android:background="#F1F1F1"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="评论"
            android:layout_marginLeft="10dp"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/commentNum"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="0条评价"
            android:textColor="#333"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:background="#dbdbdb"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>