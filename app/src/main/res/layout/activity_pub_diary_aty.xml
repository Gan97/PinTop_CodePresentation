<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hulianhujia.spellway.activitys.PubDiaryAty">
    <RelativeLayout
        android:id="@+id/loTitle"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/topbar">
        <ImageView
            android:id="@+id/btExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="11dp"
            android:tint="#333"
            android:src="@mipmap/back"
            />
        <TextView
            android:text="投稿日记"
            android:textColor="#333"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/shouye_logo"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <TextView
        android:id="@+id/btCommit"
        android:text="确认投稿"
        android:textColor="#333"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/home_filter_commit"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <ScrollView
        android:layout_below="@id/loTitle"
        android:layout_width="match_parent"
        android:layout_above="@id/btCommit"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etTitle"
                android:textColor="#333"
                android:textColorHint="#999"
                android:gravity="start|center_vertical"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="标题"
                android:textSize="14sp"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:background="@drawable/send_shape"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <EditText
                android:id="@+id/etTitle2"
                android:gravity="start|center_vertical"
                android:textColor="#333"
                android:textColorHint="#999"
                android:singleLine="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="#标签#"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:background="@drawable/send_shape"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <EditText
                android:id="@+id/etContent"
                android:hint="内容"
                android:gravity="start"
                android:textColorHint="#999"
                android:textColor="#333"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/send_shape"
                android:layout_width="match_parent"
                android:layout_height="130dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/photos"
                app:imgGap="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
