<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    tools:context="com.hulianhujia.spellway.activitys.GuideFilterAty">
    <RelativeLayout
        android:id="@+id/a"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/btExit"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvTitle"
            android:text="筛选"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="#333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lo"
        android:layout_below="@id/a"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/btAge"
            android:textColor="#333"
            android:text="年龄"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/fanhui1"
            android:layout_width="match_parent"
            android:layout_height="44dp" />
        <TextView
            android:background="#dbdbdb"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <TextView
            android:id="@+id/btSex"
            android:textColor="#333"
            android:text="性别"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/fanhui1"
            android:layout_width="match_parent"
            android:layout_height="44dp" />
        <TextView
            android:background="#dbdbdb"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <TextView
            android:id="@+id/btGrade"
            android:textColor="#333"
            android:text="评分"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/fanhui1"
            android:layout_width="match_parent"
            android:layout_height="44dp" />
        <TextView
            android:background="#dbdbdb"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <TextView
            android:id="@+id/btDis"
            android:textColor="#333"
            android:text="距离"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/fanhui1"
            android:layout_width="match_parent"
            android:layout_height="44dp" />
        <TextView
            android:background="#dbdbdb"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/lo"
        android:orientation="horizontal"
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/btReset"
            android:text="重置"
            android:textColor="#333"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@drawable/bt_reset"
            android:layout_width="150dp"
            android:layout_height="45dp" />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/btCommit"
            android:text="确定"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@drawable/my_send_shape"
            android:layout_width="150dp"
            android:layout_height="45dp" />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp" />
    </LinearLayout>

</RelativeLayout>
