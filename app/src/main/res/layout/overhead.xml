<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clipChildren="false"
    android:background="#f1f1f1"
    android:layout_height="wrap_content">

    <RelativeLayout

        android:layout_marginTop="37dp"
        android:clipChildren="false"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/lo"
            android:elevation="6dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/loContainer"
            android:layout_width="51dp"
            android:layout_marginTop="-30dp"
            android:layout_height="51dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userIcon"
                android:src="@mipmap/mamamiya"
                android:layout_width="51dp"
                android:layout_height="51dp" />
            <ImageView
                android:id="@+id/userSex"
                android:src="@mipmap/female"
                android:elevation="1dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:id="@+id/guiderName"
            android:text=""
            android:textColor="#333"
            android:textSize="15sp"
            android:layout_below="@id/lo"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/btEva"
            android:background="@drawable/comfirm_time"
            android:text="评价"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/guiderName"
            android:textColor="#333"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_width="90dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/tvinfo"
            android:textColor="#333"
            android:layout_below="@id/btEva"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvOrderNum"
            android:text="订单号：201706165325"
            android:textColor="#999"
            android:layout_marginRight="10dp"
            android:textSize="12sp"
            android:layout_alignBottom="@id/tvinfo"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dv11"
            android:background="#F0F0F0"
            android:layout_below="@id/tvOrderNum"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <TextView
            android:id="@+id/name"
            android:text="电话"
            android:textColor="#333"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/dv11"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/userPhone"
            android:layout_alignBottom="@id/name"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textColor="#333"
            android:drawableLeft="@drawable/telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv12"
            android:text="导游费"
            android:textColor="#333"
            android:layout_below="@id/name"
            android:layout_marginLeft="10dp"

            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/guiderPrice"
            android:textColor="#F45B5B"
            android:layout_alignBottom="@id/tv12"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv13"
            android:text="时长费"
            android:textColor="#333"
            android:layout_below="@id/tv12"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/guideHourPrice"
            android:textColor="#F45B5B"
            android:layout_alignBottom="@id/tv13"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv14"
            android:textColor="#333"
            android:layout_below="@id/tv13"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="订单状态"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvState"
            android:textColor="#333"
            android:layout_marginRight="10dp"

            android:text="已完成"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/tv14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/tvState"
            android:id="@+id/tvTime"
            android:layout_marginLeft="10dp"
            android:text="游览时长"
            android:layout_marginTop="10dp"
            android:textColor="#333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/travel_Time"
            android:textColor="#333"
            android:layout_alignBottom="@id/tvTime"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvPrice"
            android:textColor="#333"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/tvTime"
            android:layout_marginTop="10dp"
            android:text="游览费用"
            android:drawablePadding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/travelPrice"

            android:textColor="#333"
            android:layout_alignBottom="@id/tvPrice"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/travelPrice"
            android:layout_width="match_parent"
            android:layout_height="10dp" />
    </RelativeLayout>

</RelativeLayout>