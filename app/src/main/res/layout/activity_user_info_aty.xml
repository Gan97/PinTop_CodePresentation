<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:id="@+id/father"
    android:orientation="vertical"
    tools:context="com.hulianhujia.spellway.activitys.UserInfoAty">
    <RelativeLayout
        android:id="@+id/a"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <ImageView
            android:id="@+id/btExit"
            android:layout_alignParentBottom="true"
            android:src="@drawable/back"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvTitle"
            android:text="用户信息"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="#333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/btSave"
            android:text="保存"
            android:textSize="17sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="#333"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#fff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/userIcon"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:text="头像"
                    android:textColor="@color/zitiColor"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iconImg"
                    android:src="@mipmap/head_portrait"
                    android:layout_toLeftOf="@+id/t0"
                    android:layout_centerVertical="true"
                    android:layout_width="40dp"
                    android:layout_marginRight="8dp"
                    android:layout_height="40dp" />
                <TextView
                    android:id="@+id/t0"
                    android:layout_marginRight="10dp"
                    android:textColor="#999"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/fanhui1"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:background="@drawable/dv_color"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <RelativeLayout
                android:id="@+id/userNameLo"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:text="昵称"
                    android:textColor="@color/zitiColor"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/t1"
                    android:layout_marginRight="10dp"
                    android:textColor="#999"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/fanhui1"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:background="@drawable/dv_color"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <RelativeLayout
                android:id="@+id/userAgeLo"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:text="年龄"
                    android:textColor="@color/zitiColor"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/t2"
                    android:textColor="#999"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/fanhui1"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:background="@drawable/dv_color"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <RelativeLayout
                android:id="@+id/userSexLo"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:text="性别"
                    android:textColor="@color/zitiColor"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/t3"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textColor="#999"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/fanhui1"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:background="@drawable/dv_color"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <RelativeLayout
                android:id="@+id/userTallLo"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:text="身高"
                    android:textColor="@color/zitiColor"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/t4"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:textColor="#999"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/fanhui1"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:background="@drawable/dv_color"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <RelativeLayout
                android:id="@+id/userWeightLo"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:text="体重"
                    android:textColor="@color/zitiColor"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/t5"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textColor="#999"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/fanhui1"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:background="@drawable/dv_color"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <RelativeLayout
                android:id="@+id/userLocLo"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:text="所在地"
                    android:textColor="@color/zitiColor"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/t6"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textColor="#999"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/fanhui1"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:background="@drawable/dv_color"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <RelativeLayout
                android:id="@+id/userHobbyLo"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:text="爱好"
                    android:textColor="@color/zitiColor"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5" />
                <TextView
                    android:id="@+id/t7"
                    android:textColor="#999"
                    android:gravity="center"
                    android:singleLine="true"
                    android:maxEms="15"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/fanhui1"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView5"
                    android:layout_alignBottom="@+id/textView5"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
            <TextView
                android:background="@drawable/dv_color"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <RelativeLayout
                android:id="@+id/userMottoLo"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:text="签名"
                    android:textColor="@color/zitiColor"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/t8"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:maxEms="18"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/fanhui1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textColor="#999"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
            <TextView
                android:background="@drawable/dv_color"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
