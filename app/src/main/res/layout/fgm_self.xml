<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1">
    <ScrollView
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/loTitle"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="#FFFAEC5F">
                <ImageView
                    android:id="@+id/btSetting"
                    android:src="@mipmap/settingb"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="93dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="我的"
                    android:textColor="#333"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="91dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/selfIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="16dp"
                    android:src="@mipmap/head_portrait" />
                <TextView
                    android:id="@+id/useName_useless"
                    android:layout_toRightOf="@+id/selfIcon"
                    android:layout_alignTop="@id/selfIcon"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="8dp"
                    android:textColor="#333"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/selfMotto"
                    android:layout_width="242dp"
                    android:layout_alignLeft="@id/useName_useless"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/useName_useless"
                    android:layout_height="wrap_content"
                    android:textColor="#333"
                    android:textSize="12sp" />
            </RelativeLayout>


            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/input_use"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="投稿日记"
                        android:textColor="#333333"
                        android:textSize="14sp" />
                </LinearLayout>
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#dbdbdb" />
                <LinearLayout
                    android:id="@+id/travel_use"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/btTralDiary"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="我的日记"
                        android:textColor="#333333"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dbdbdb" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="#F1F1F1" />
            <TextView
                android:id="@+id/btWallet"
                android:background="#fff"
                android:text="我的钱包"
                android:textColor="#333"
                android:paddingLeft="20dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:drawableLeft="@mipmap/wallet"
                android:layout_width="match_parent"
                android:layout_height="48dp" />
            <TextView
                android:background="#f1f1f1"
                android:layout_width="match_parent"
                android:layout_height="12dp" />
            <LinearLayout
                android:background="#fff"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="68dp">
                <TextView
                    android:id="@+id/btMyRed"
                    android:text="我的红包"
                    android:drawableTop="@mipmap/bag"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:textColor="#333"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/btMyNews"
                    android:text="我的动态"
                    android:drawableTop="@mipmap/activity"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:textColor="#333"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/btMyOrders"
                    android:text="我的订单"
                    android:drawableTop="@mipmap/dd"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:textColor="#333"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:background="#fff"
                android:layout_height="68dp">
                <TextView
                    android:id="@+id/btMyInvites"
                    android:text="我的邀请"
                    android:drawableTop="@mipmap/visite"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:textColor="#333"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/btMyFollow"
                    android:text="我的关注"
                    android:drawableTop="@mipmap/follow"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:textColor="#333"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/btMyColloction"
                    android:text="我的收藏"
                    android:drawableTop="@mipmap/collect"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:textColor="#333"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="#f1f1f1" />

            <RelativeLayout
                android:background="#fff"
                android:id="@+id/btMyMessage"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:id="@+id/tv_7"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@mipmap/message"
                    android:gravity="center"
                    android:text="我的消息"
                    android:textColor="#333" />

                <ImageView
                    android:id="@+id/b"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/more"
                    android:textColor="#333" />
                <TextView
                    android:id="@+id/redBot"
                    android:visibility="gone"
                    android:background="@drawable/red_ov"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/b"
                    android:layout_width="8dp"
                    android:layout_height="8dp" />
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#FFF0F0F0" />

            <RelativeLayout
                android:id="@+id/btPresent"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:id="@+id/tv_8"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@mipmap/present"
                    android:gravity="center"
                    android:text="邀请有礼"
                    android:textColor="#333" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/more"
                    android:textColor="#333" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#F1F1F1" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>