<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="226dp">
    <ImageView
        android:layout_below="@+id/text_useless"
        android:id="@+id/itemBg"
        android:scaleType="fitXY"
        android:src="@mipmap/mountain"
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/tvTitle"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="11dp"
        android:text="魅力大山，我最稀饭"
        android:textColor="#fff"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_location"
        android:src="@mipmap/shouye_dizhi"
        android:layout_below="@+id/tvTitle"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="2dp"
        android:layout_alignLeft="@+id/tvTitle"
        android:layout_width="9dp"
        android:layout_height="13dp" />

    <TextView
        android:id="@+id/tvLocation"
        android:text="火星"
        android:layout_below="@id/tvTitle"
        android:layout_toRightOf="@+id/iv_location"
        android:layout_marginLeft="6dp"
        android:layout_alignTop="@+id/iv_location"
        android:textSize="14sp"
        android:layout_marginTop="-2dp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvTime"
        android:text="2016.12.12"
        android:layout_below="@id/iv_location"
        android:layout_alignLeft="@id/iv_location"
        android:layout_marginTop="8dp"
        android:textColor="#fff"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_unKnow"
        android:src="@mipmap/shouye_shoucang"
        android:layout_toLeftOf="@+id/tvNum"
        android:layout_marginRight="5dp"
        android:layout_marginTop="22dp"
        android:layout_width="14dp"
        android:layout_height="12dp" />
    <TextView
        android:id="@+id/tvNum"
        android:layout_alignParentRight="true"
        android:layout_marginTop="19dp"
        android:layout_marginRight="20dp"
        android:text="1000"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />
    <TextView
        android:id="@+id/tvContent"
        android:text="长的帅到底有没有错"
        android:textColor="#fff"
        android:textSize="14sp"
        android:paddingBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>